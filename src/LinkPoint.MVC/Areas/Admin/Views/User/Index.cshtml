@model PaginatedUsersGetViewModel

<div class="container">
    <div class="row">
        @foreach (var user in Model.Users)
        {
            <div class="col-md-3">
                <div class="card mb-4">
                    <img class="card-img-top" src="@user.ProfileImage" alt="Profile Image" style="width: 100px; height: 100px; object-fit: cover; margin: 10px auto;">
                    <div class="card-body text-center">
                        <h5 class="card-title">@user.UserName</h5>
                        <a href="@Url.Action("Detail", "User", new { id = user.UserId })" class="btn btn-info btn-sm">Details</a>
                        <a href="@Url.Action("SoftDelete", "User", new { id = user.UserId })" class="btn btn-danger btn-sm">Soft Delete</a>
                        <a href="@Url.Action("Activate", "User", new { id = user.UserId })" class="btn btn-success btn-sm">Activate</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @for (var i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { pageNumber = i, pageSize = Model.PageSize })">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>

