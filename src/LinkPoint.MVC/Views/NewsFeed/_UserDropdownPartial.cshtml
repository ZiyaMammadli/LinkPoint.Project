@model SearchVeiwModel

@if (Model.Users.Count > 0)
{
    <ul class="dropdown-menushow" style="position: relative">
        @foreach (var user in Model.Users)
        {
            var UserProfilee = "";
            if (user.UserName == Model.UserInfo.UserName)
            {
                UserProfilee = "/AuthUserProfile/Index";
            }
            else
            {
                UserProfilee = $"/UserProfile/Index/{user.UserId}";
            }

                <li class="dropdown-itemmm">
                <a href="@UserProfilee" style="width:100%; display: flex; align-items: center;">
                        <img src="@user.ProfileImage" alt="" class="profile-photo-sm" />
                        <p style="color:black">@user.UserName </p>
                    </a>
                </li>
        }
    </ul>
}
else
{
    <p class="dropdown-item">No users found</p>
}
