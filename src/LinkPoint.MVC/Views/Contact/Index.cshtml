@model ContactViewModel;
@{
    var message = (string)ViewData["success"];
}
    <div class="google-maps">
        <div id="map" class="map contact-map"></div>
    </div>
    <div id="page-contents">
        <div class="container">
            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <div class="contact-us">
                        <div class="row">
                            <div class="col-md-8 col-sm-7">
                                <h4 class="grey">Leave a Message</h4>
                                <h1 style="color:green">@message</h1>
                                <form class="contact-form" method="post">
                                    <div class="form-group">
                                        <i class="icon ion-person"></i>
                                        <input asp-for="@Model.ContactMessagePostViewModel.Name" id="contact-name" type="text" class="form-control" placeholder="Enter your name *" required="required" data-error="Name is required.">
                                        <span asp-validation-for="@Model.ContactMessagePostViewModel.Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <i class="icon ion-email"></i>
                                        <input asp-for="@Model.ContactMessagePostViewModel.Email" id="contact-email" type="text" class="form-control" placeholder="Enter your email *" required="required" data-error="Email is required.">
                                        <span asp-validation-for="@Model.ContactMessagePostViewModel.Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <i class="icon ion-android-call"></i>
                                        <input asp-for="@Model.ContactMessagePostViewModel.PhoneNumber" id="contact-phone" type="text" class="form-control" placeholder="Enter your phone *" required="required" data-error="Phone is required.">
                                        <span asp-validation-for="@Model.ContactMessagePostViewModel.PhoneNumber" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="@Model.ContactMessagePostViewModel.Message" id="form-message" class="form-control" placeholder="Leave a message for us *" rows="4" required="required" data-error="Please,leave us a message.">
                                        <span asp-validation-for="@Model.ContactMessagePostViewModel.Message" class="text-danger"></span>
                                    </div>
                                    <input asp-for="@Model.ContactMessagePostViewModel.UserId" type="hidden" value="@Model.UserId" />
                                    <button type="submit" class="btn-primary">Send a Message</button>
                                </form>
                            </div>
                            <div class="col-md-4 col-sm-5">
                                <h4 class="grey">Reach Us</h4>
                                <div class="reach"><span class="phone-icon"><i class="icon ion-android-call"></i></span><p>+994 51 311 15 11</p></div>
                                <div class="reach"><span class="phone-icon"><i class="icon ion-email"></i></span><p>linkpointsm@gmail.com</p></div>
                                <div class="reach"><span class="phone-icon"><i class="icon ion-ios-location"></i></span><p>Baku, Azerbaijan, AZE</p></div>
                                <ul class="list-inline social-icons">
                                    <li><a href="#"><i class="icon ion-social-facebook"></i></a></li>
                                    <li><a href="#"><i class="icon ion-social-twitter"></i></a></li>
                                    <li><a href="#"><i class="icon ion-social-googleplus"></i></a></li>
                                    <li><a href="#"><i class="icon ion-social-pinterest"></i></a></li>
                                    <li><a href="#"><i class="icon ion-social-linkedin"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

 

